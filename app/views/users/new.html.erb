<%= form_with url: users_path, method: :post, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password, 'Password:' %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation, 'Confirm Password:' %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Register" %>
<% end %>